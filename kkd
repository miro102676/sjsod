    <script>
        // Управление заставкой
        document.addEventListener('DOMContentLoaded', function() {
            const splashScreen = document.getElementById('splashScreen');
            
            // Скрываем заставку через 3.5 секунды
            setTimeout(() => {
                splashScreen.style.opacity = '0';
                setTimeout(() => {
                    splashScreen.style.display = 'none';
                }, 1500);
            }, 3500);
            
            // Улучшенная анимация при скролле с requestAnimationFrame
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        requestAnimationFrame(() => {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0) translateZ(0)';
                        });
                    }
                });
            }, observerOptions);
            
            // Наблюдаем за элементами с анимацией
            document.querySelectorAll('.point-card, .benefit-card, .performance-optimized').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px) translateZ(0)';
                el.style.transition = 'all 0.6s ease';
                observer.observe(el);
            });

            // Fix для точек на мобильных устройствах
            const pointLists = document.querySelectorAll('.point-list');
            pointLists.forEach(list => {
                // Добавляем класс для предотвращения смещения
                list.classList.add('performance-optimized');
                // Устанавливаем стили для предотвращения проблем со скроллом
                list.style.transform = 'translateZ(0)';
                list.style.backfaceVisibility = 'hidden';
                list.style.perspective = '1000';
            });

            // Fallback для фотографии
            const ivanPhoto = document.querySelector('.ivan-photo');
            if (ivanPhoto) {
                ivanPhoto.onerror = function() {
                    this.style.display = 'none';
                    // Фон уже установлен в CSS
                };
            }
        });
    </script>
</body>
